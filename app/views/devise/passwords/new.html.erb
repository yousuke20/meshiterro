<div class="container">
  <div class="row no-gutters">
    <div class="col-mt-5 col-sm-5 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">Forgot your password?</h5>
      <div class="form-body p-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", placeholder:"メールアドレス", autofocus: true, autocomplete: "email" %>
          </div>
          <hr>
          <div class="actions">
            <%= f.submit "Send me reset password instructions", class:"btn btn-lg btn-block btn-info mt-4" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>




